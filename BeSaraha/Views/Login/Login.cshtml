@model LoginDTO
@{
    ViewData["Title"] = "Login";
}
<partial name="_Notification" />
<div id="loginformcontainer" class="container d-flex justify-content-center align-items-center text-light">
    <form id="loginform" class="text-light needs-validation w-25" method="post" asp-controller="Login" asp-action="Login">
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" asp-for="email" class="form-control" id="email" placeholder="example@domain.com" title="please enter a valid email" pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,}$" autocomplete="on" aria-describedby="emailHelp" required>
            <div class="invalid-tooltip">
                Please provide valid a valid email.
            </div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" asp-for="password" class="form-control" id="password" minlength="8" autocomplete="on" required>

        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" asp-for=keeplogin class="form-check-input" id="KeepLoggedinCheck" checked>
            <label class="form-check-label" for="KeepLoggedinCheck">Keep me logged in!</label>
        </div>
        <button type="submit" class="btn btn-primary w-100 mb-2">Login</button>
        <a class="btn btn-secondary w-100" asp-controller="Login" asp-action="Register">Register</a>
    </form>
</div>
